{
	"name": "custom-view-samples",
	"displayName": "Custom view Samples",
	"description": "Samples for VSCode's view API",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"enableProposedApi": true,
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:importedConnectors",
		"onView:exchangeFeatured",
		"onLanguage:xml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mulesoft-tools",
					"title": "Mulesoft Tools",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"mulesoft-tools": [
				{
					"id": "exchangeFeatured",
					"name": "Featured Exchange Connectors",
					"icon": "media/dep.svg",
					"contextualTitle": "Mulesoft Tools"
				},
				{
					"id": "importedConnectors",
					"name": "Imported Connectors",
					"icon": "media/dep.svg",
					"contextualTitle": "Mulesoft Tools"
				}
			]
		},
		"commands": [
			{
				"command": "importedConnectors.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "importedConnectors.editEntry",
				"title": "Select Version",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "importedConnectors.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "exchangeFeatured.addEntry",
				"title": "Add"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "importedConnectors.refreshEntry",
					"when": "view == importedConnectors",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "importedConnectors.editEntry",
					"when": "view == importedConnectors && viewItem == dependency"
				},
				{
					"command": "importedConnectors.deleteEntry",
					"when": "view == importedConnectors && viewItem == dependency"
				},
				{
					"command": "exchangeFeatured.addEntry",
					"when": "view == exchangeFeatured && viewItem == dependency"
				}
			]
		},
		"configuration": [
			{
				"title": "Mulesoft",
				"properties": {
					"mulesoft.exchange.featuredConnectors": {
						"type": "array",
						"default": [],
						"scope": "window",
						"description": "An array of maven dependencies in the format { groupId: string, artifactId: string } which are considered 'featured' and make it easier to add to projects."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.12.0",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@xmldom/xmldom": "^0.7.4",
		"axios": "^0.21.4",
		"ftp": "^0.3.10",
		"jsonc-parser": "^0.4.2",
		"minimist": "^0.2.1",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}